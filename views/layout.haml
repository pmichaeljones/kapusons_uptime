!!! 5
%html(lang="en-US")
  %head
    - if @title
      %title
        = @title
    - else
      %title Kapusons Uptime Monitoring App
    %meta(charset="UTF-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    - if @metadescription
      %meta{:name => 'description', :content => "#{@metadescription}"}
    - else
      %meta{:name => 'description', :content => "Contant monitoring of developed applications."}
    %link{:href => "css/foundation.css", :rel => 'stylesheet' }
    %link{:href => "css/app.css", :rel => 'stylesheet' }
    %script{:src => "js/vendor/modernizr.js" }
    %link{:href => 'https://fonts.googleapis.com/css?family=Raleway:400,200,700', :rel=> 'stylesheet', :type => 'text/css' }
  %body
    %header
      /= render ''
    %section
      /= render ''
      = yield
    %footer
      %script{ :src => "js/vendor/jquery.js" }
      %script{ :src => "js/foundation.min.js" }
      :javascript
        $(document).foundation();